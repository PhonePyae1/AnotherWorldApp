<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".writeNewDiary.NewDiary1">

    <TextView
        android:id="@+id/textView"
        android:layout_width="323dp"
        android:layout_height="62dp"
        android:layout_gravity="top"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="246dp"
        android:gravity="center|left"
        android:text="What's the Place"
        android:textColor="@color/black"
        android:textSize="30sp" />

    <SearchView
        android:id="@+id/searchBar"
        android:layout_width="365dp"
        android:layout_height="39dp"
        android:layout_gravity="top"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="301dp"
        android:background="@drawable/write_border_shape"
        tools:visibility="invisible" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="23dp">

        <Button
            android:id="@+id/cancelButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:width="179dp"
            android:height="47dp"
            android:background="@drawable/write_cancel_button_shape"
            android:text="@string/cancel"
            app:backgroundTint="#85000000" />

        <Button
            android:id="@+id/nextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="179dp"
            android:height="47dp"
            android:background="@drawable/write_next_button_shape"
            android:onClick="write_next_onclick"
            android:text="@string/next"
            app:backgroundTint="#38B6FF" />
    </LinearLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/location1"
        android:layout_width="365dp"
        android:layout_height="39dp"
        android:background="@drawable/write_border_shape"
        android:ems="10"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="301dp"
        android:hint="The Sky Bar"
        android:inputType="textPersonName"
        android:paddingLeft="20dp" />

</FrameLayout>