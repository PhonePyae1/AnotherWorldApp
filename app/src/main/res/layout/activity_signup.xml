<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".SignupActivity"
    android:orientation="vertical"
    android:background="@color/white">

    <TextView
        android:id="@+id/LoginText"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/roboto"
        android:text="Sign In"
        android:textAlignment="center"
        android:textColor="#38B6FF"
        android:textSize="36sp"
        android:textStyle="bold"
        android:layout_marginBottom="50dp"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:hint=" Username"
        android:background="@drawable/signin_input"
        android:drawableStart="@drawable/ic_action_email"
        android:layout_marginHorizontal="30dp"
        android:layout_marginBottom="20dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:inputType="text"
        />


    <EditText
        android:layout_width="match_parent"
        android:hint=" Password"
        android:layout_height="55dp"
        android:background="@drawable/signin_input"
        android:drawableStart="@drawable/ic_action_password"
        android:layout_marginHorizontal="30dp"
        android:layout_marginBottom="150dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:inputType="textPassword"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/login_button"
        android:layout_marginTop="100dp"
        android:layout_marginHorizontal="30dp"
        android:textColor="@color/white"
        android:text="Next "
        android:onClick="signIn_btn_onClick"/>

    <TextView
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:text="I am a new user."
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="140dp"
        android:textColor="#ACB1B4"
        android:layout_marginBottom="1dp" />

    <TextView
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:text="@string/signUp"
        android:layout_marginHorizontal="165dp"
        android:textColor="#38B6FF"
        android:layout_marginBottom="10dp"
        android:onClick="signUp_Click"/>

</LinearLayout>